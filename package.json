{
  "name": "personal",
  "version": "1.0.0",
  "description": "My personal website",
  "author": "Dominic Carrington",
  "private": true,
  "scripts": {
    "dev": "yarn run md2json && nuxt",
    "build": "yarn run md2json && nuxt build",
    "start": "nuxt start",
    "generate": "cross-env-shell API_URL=https://dominiccarrington.github.io \"yarn run md2json && nuxt generate\"",
    "deploy": "yarn run generate && push-dir --dir=dist --branch=master --cleanup",
    "md2json": "m2j -c content/blogposts/*.md -o static/blogposts.json && node postsToTags.js",
    "lint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
    "lintfix": "eslint --fix --ext .ts,.js,.vue --ignore-path .gitignore ."
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.17",
    "@fortawesome/free-brands-svg-icons": "^5.8.1",
    "@fortawesome/vue-fontawesome": "^0.1.6",
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/google-analytics": "^2.2.0",
    "@nuxtjs/markdownit": "^1.2.4",
    "@nuxtjs/moment": "^1.2.0",
    "@nuxtjs/pwa": "^2.6.0",
    "@nuxtjs/sitemap": "^1.3.0",
    "bootstrap": "^4.1.3",
    "bootstrap-vue": "^2.0.0-rc.11",
    "chart.js": "^2.8.0",
    "cross-env": "^5.2.0",
    "elasticlunr": "^0.9.5",
    "markdown-it-prism": "^2.0.1",
    "markdown-to-json": "^0.5.1",
    "moment": "^2.24.0",
    "node-sass": "^4.11.0",
    "nuxt": "^2.4.0",
    "nuxt-fontawesome": "^0.4.0",
    "push-dir": "^0.4.1",
    "sass-loader": "^7.1.0",
    "v-click-outside": "^2.1.3",
    "vue-chartjs": "^3.4.2",
    "vue-cookie-law": "^1.10.0"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "^0.2.6",
    "@nuxtjs/eslint-config": "^1.0.1",
    "@nuxtjs/eslint-config-typescript": "^0.1.2",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@types/chart.js": "^2.8.5",
    "eslint": "^6.1.0",
    "eslint-loader": "^3.0.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-vue": "^5.2.3",
    "husky": "^3.0.5",
    "nodemon": "^1.18.9",
    "vue-property-decorator": "^8.2.2",
    "yaml": "^1.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
